        <img src="@Url.Content("~/Images/Countries/" + Model.Code + "/" + Model.Flag_Img)" alt="Flag image for @Model.Name" />
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Code }) |
